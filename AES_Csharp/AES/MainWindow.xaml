<Window
    x:Class="AES.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AES"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AES"
    Width="950"
    Height="800"
    Background="LightGray"
    FontSize="16"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Content="MÃ HÓA VÀ GIẢI MÃ THEO CHUẨN AES"
            FontSize="22"
            FontWeight="Bold" />

        <Border
            Grid.Row="1"
            Grid.RowSpan="7"
            Grid.Column="0"
            Margin="0,0,5,0"
            BorderBrush="Gray"
            BorderThickness="1" />

        <Border
            Grid.Row="1"
            Grid.RowSpan="7"
            Grid.Column="1"
            Margin="5,0,0,0"
            BorderBrush="Gray"
            BorderThickness="1" />

        <Border
            Grid.Row="8"
            Grid.RowSpan="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,10,0,10"
            BorderBrush="Gray"
            BorderThickness="1" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="Nội dung cần mã hóa" />

        <TextBox
            x:Name="txt_en_ban_ro"
            Grid.Row="2"
            Grid.Column="0" />

        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Margin="40,5,40,5"
            HorizontalAlignment="Stretch">
            <Label Content="Kích thước khóa" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <RadioButton
                    x:Name="rdb_en_128"
                    Width="100"
                    VerticalContentAlignment="Center"
                    Content="128 bits"
                    IsChecked="True" />
                <RadioButton
                    x:Name="rdb_en_192"
                    Width="100"
                    VerticalContentAlignment="Center"
                    Content="192 bits" />
                <RadioButton
                    x:Name="rdb_en_256"
                    Width="100"
                    VerticalContentAlignment="Center"
                    Content="256 bits" />
            </StackPanel>
        </StackPanel>

        <DockPanel
            Grid.Row="4"
            Grid.Column="0"
            Height="30"
            Margin="40,10,40,10">

            <Label
                Width="110"
                Padding="0"
                Content="Khóa mã hóa" />
            <TextBox
                x:Name="txt_en_key"
                Height="30"
                Margin="0" />
        </DockPanel>

        <Button
            x:Name="btn_mahoa"
            Grid.Row="5"
            Grid.Column="0"
            HorizontalAlignment="Left"
            Click="btn_mahoa_Click"
            Content="Mã hóa" />
        <Button
            x:Name="btn_en_file"
            Grid.Row="5"
            Grid.Column="0"
            HorizontalAlignment="Right"
            Click="btn_en_file_Click"
            Content="Mã hóa file .txt" />

        <TextBox
            x:Name="txt_en_ban_ma"
            Grid.Row="6"
            Grid.Column="0" />

        <Label
            Grid.Row="1"
            Grid.Column="1"
            Content="Nội dung cần giải mã" />

        <TextBox
            x:Name="txt_de_ban_ma"
            Grid.Row="2"
            Grid.Column="1" />

        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Margin="40,5,40,5"
            HorizontalAlignment="Stretch">
            <Label Content="Kích thước khóa" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <RadioButton
                    x:Name="rdb_de_128"
                    Width="100"
                    VerticalContentAlignment="Center"
                    Content="128 bits"
                    IsChecked="True" />
                <RadioButton
                    x:Name="rdb_de_192"
                    Width="100"
                    VerticalContentAlignment="Center"
                    Content="192 bits" />
                <RadioButton
                    x:Name="rdb_de_256"
                    Width="100"
                    VerticalContentAlignment="Center"
                    Content="256 bits" />
            </StackPanel>
        </StackPanel>

        <DockPanel
            Grid.Row="4"
            Grid.Column="1"
            Height="30"
            Margin="40,10,40,10">
            <Label
                Width="110"
                Padding="0"
                Content="Khóa giải mã" />
            <TextBox
                x:Name="txt_de_key"
                Height="30"
                Margin="0" />
        </DockPanel>

        <Button
            x:Name="btn_giai_ma"
            Grid.Row="5"
            Grid.Column="1"
            HorizontalAlignment="Left"
            Click="btn_giai_ma_Click"
            Content="Giải mã" />
        <Button
            x:Name="btn_de_file"
            Grid.Row="5"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Click="btn_de_file_Click"
            Content="Giải mã file .txt" />

        <TextBox
            x:Name="txt_de_ban_ro"
            Grid.Row="6"
            Grid.Column="1" />

        <Button
            x:Name="btn_en_luu_tep"
            Grid.Row="7"
            Grid.Column="0"
            Click="btn_en_luu_tep_Click"
            Content="Lưu file .txt" />
        <Button
            x:Name="btn_de_luu_tep"
            Grid.Row="7"
            Grid.Column="1"
            Click="btn_de_luu_tep_Click"
            Content="Lưu file .txt" />

        <Label
            Grid.Row="8"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            Content="Mã hóa và giải mã file" />

        <DockPanel
            Grid.Row="9"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="30"
            Margin="40,0,40,0">
            <Button
                x:Name="btn_mo_file"
                Grid.Row="7"
                Grid.Column="0"
                Width="180"
                Margin="0,0,20,0"
                Click="btn_mo_file_Click"
                Content="Chọn file" />
            <TextBox
                x:Name="txt_file_path"
                Height="30"
                Margin="0,0,0,0" />
        </DockPanel>

        <StackPanel
            Grid.Row="10"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0"
            HorizontalAlignment="Stretch">
            <Label Content="Kích thước khóa" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <RadioButton
                    x:Name="rdb_file_128"
                    Width="100"
                    VerticalContentAlignment="Center"
                    Content="128 bits"
                    IsChecked="True" />
                <RadioButton
                    x:Name="rdb_file_192"
                    Width="100"
                    VerticalContentAlignment="Center"
                    Content="192 bits" />
                <RadioButton
                    x:Name="rdb_file_256"
                    Width="100"
                    VerticalContentAlignment="Center"
                    Content="256 bits" />
            </StackPanel>
        </StackPanel>

        <DockPanel
            Grid.Row="11"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="30"
            Margin="40,5,40,5">

            <Label
                Width="180"
                Margin="0,0,20,0"
                Padding="0"
                Content="Khóa mã hóa/giải mã" />
            <TextBox
                x:Name="txt_file_key"
                Height="30"
                Margin="0" />
        </DockPanel>

        <Button
            x:Name="btn_ma_hoa_file"
            Grid.Row="12"
            Grid.Column="0"
            Margin="40,5,0,20"
            HorizontalAlignment="Left"
            Click="btn_ma_hoa_file_Click"
            Content="Mã hóa file" />
        <Button
            x:Name="btn_giai_ma_file"
            Grid.Row="12"
            Grid.Column="1"
            Margin="0,5,40,20"
            HorizontalAlignment="Right"
            Click="btn_giai_ma_file_Click"
            Content="Giải mã file" />

        <StackPanel
            Grid.Row="13"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="btn_refresh"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="btn_refresh_Click"
                Content="Làm mới" />
            <Button
                x:Name="btn_thoat"
                Margin="30,10,10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="btn_thoat_Click"
                Content="Thoát" />
        </StackPanel>

    </Grid>
</Window>
